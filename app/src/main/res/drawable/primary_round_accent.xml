<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/md_pink_700" />
            <stroke android:width="1dp" android:color="@color/md_pink_700" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/md_pink_700" android:startColor="@color/md_pink_500" />
            <stroke android:width="1dp" android:color="@color/md_pink_700" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>